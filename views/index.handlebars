<h1>Eat a Burger!</h1>



<ul>
<h2>Waiting to be devoured!</h2>
  {{#each cats}}
    {{#unless this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Devour!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/unless}}
  {{/each}}
</ul>



<ul>
<h2>Devoured!</h2>
  {{#each cats}}
    {{#if this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">Get Another One!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<div id = "new">
<h2>Get a New Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">New Burger:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Get it</button>
</form>
</div>
